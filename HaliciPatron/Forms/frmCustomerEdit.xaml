<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HaliciPatron.Forms.frmCustomerEdit">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <TableView Intent="Form">
                    <TableRoot>
                        <TableSection Title="Müşteri Düzenle" TextColor="#FF0000">
                            <EntryCell x:Name="TxtCustomerName" Label="Müşteri Adı" />
                            <EntryCell x:Name="TxtAdress" Label="Adres" />
                            <EntryCell x:Name="TxtPhone" Label="Telefon" Keyboard="Telephone" />
                            <ViewCell>
                                <Button
                                    Clicked="BtnSave_Clicked"
                                    x:Name="btnSave"
                                    Text="Kaydet"
                                    BackgroundColor="#40D9F2"
                                    FontAttributes="Bold"
                                    TextColor="#F70808" />
                            </ViewCell>
                        </TableSection>
                    </TableRoot>

                </TableView>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>